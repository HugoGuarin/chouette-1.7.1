			<implementation>configuration</implementation> </component> </components> 
			<componentProperties> <drop>false</drop> <outputfilename>schema.sql</outputfilename> 
			<configurationfile>target/classes/hibernate.cfg.xml</configurationfile> </componentProperties> 
			</configuration> </plugin> </plugins -->
	</build>

</project>
